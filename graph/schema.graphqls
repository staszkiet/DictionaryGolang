type Word {
  id: ID!
  polish: String!
  translations: [Translation!]!
}

type Translation {
  id: ID!
  english: String!
  sentences: [Sentence!]!
}

type Sentence {
  id: ID!
  sentence: String!
}

type Query {
  selectWord(polish: String!): Word!
}

input NewTranslation {
  english: String!
  sentences: [String!]!
}

type Mutation {
  createWord(polish: String!, translation: NewTranslation!): Boolean!
  createSentence(polish: String!, english: String!, sentence: String!): Boolean!
  deleteWord(polish: String!): String!
}